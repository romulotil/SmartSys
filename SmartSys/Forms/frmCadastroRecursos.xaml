<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="SmartSys.frmCadastroRecursos"
	x:Name="Window"
	Width="450" Height="250" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Icon="/SmartSys;component/Images/Icone.ico">

	<Grid x:Name="LayoutRoot">
		<Label x:Name="lblRecurso" Content="Recurso" Margin="8,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="26" RenderTransformOrigin="0.595,1.962"/>
		<TextBox x:Name="txtRecurso" Margin="8,76,12,0" TextWrapping="Wrap" VerticalAlignment="Top" d:LayoutOverrides="VerticalAlignment" Height="26" VerticalContentAlignment="Center"/>
		<Button x:Name="btnCancelar" Content="Cancelar" Height="26" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="120" HorizontalAlignment="Right" Click="btnCancelar_Click"/>
		<Button x:Name="btnConfirmar" Content="Confirmar" HorizontalAlignment="Right" Height="26" Margin="0,0,140,10" VerticalAlignment="Bottom" Width="120" Click="btnConfirmar_Click"/>
	</Grid>
</Window>